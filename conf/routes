# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET        /                     controllers.HomeController.index()

GET        /mangas               controllers.MangaController.findAll()
GET        /mangas/:id           controllers.MangaController.findById(id:Int)

GET        /chapters/:id         controllers.ChapterController.findById(id:Int)

GET        /genres               controllers.GenreController.findAll()

GET        /mangas-search        controllers.MangaSearchController.findAllBySearchParameters(title: Option[String], franchise: Option[String], includedGenres: Seq[String], excludedGenres: Seq[String])

GET        /files/:key           controllers.FileController.findByKey(key: String)
# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)
